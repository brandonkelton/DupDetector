<Window x:Class="DupDetector.MainWindow"
        x:Name="MainWindowA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupDetector"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="450" Width="650"
        ShowInTaskbar="True" WindowStyle="None" WindowState="Normal" ResizeMode="CanMinimize"
        MouseDown="Window_MouseDown"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="Added:" Style="{StaticResource TextBlockBoldStyle}" RenderTransformOrigin="1.542,9" Margin="117,234,0,0"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="Deleted:" Style="{StaticResource TextBlockBoldStyle}" Margin="110,259,0,0"/>
        <Button Name="ButtonConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="565,406,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource ButtonStyle}" PreviewMouseDown="ButtonConfirm_PreviewMouseDown"/>
        <Button Name="ButtonDetails" Content="Details" HorizontalAlignment="Left" Margin="474,406,0,0" VerticalAlignment="Top" Width="75"  Style="{StaticResource ButtonStyle}" PreviewMouseDown="ButtonDetails_PreviewMouseDown"/>
        <Button Name="ButtonClose" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Style="{StaticResource ButtonThinStyle}" PreviewMouseDown="ButtonClose_PreviewMouseDown"/>
        <Button Name="ButtonSelectFile" Content="Select a File" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,50,0,0" PreviewMouseDown="ButtonSelectFile_PreviewMouseMouse"/>
        <TextBox Name="TextBoxFile" Style="{StaticResource TextBoxStyle}" FontSize="14" Height="34" IsReadOnly="True" Padding="2.5" HorizontalAlignment="Left" Margin="170,50,0,0" VerticalAlignment="Top" Width="400"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="Updated:" Style="{StaticResource TextBlockBoldStyle}" Margin="105,284,0,0" RenderTransformOrigin="-0.142,0.796"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="No Action:" Style="{StaticResource TextBlockBoldStyle}" Margin="95,309,0,0" RenderTransformOrigin="-0.142,0.796"/>
        <TextBlock Style="{StaticResource TextBlockStyle}" Name="TextBlockRecordsAdded" Text="Select a file for processing" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,234,0,0"/>
        <TextBlock Style="{StaticResource TextBlockStyle}" Name="TextBlockRecordsDeleted" Text="Select a file for processing" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,259,0,0"/>
        <TextBlock Style="{StaticResource TextBlockStyle}" Name="TextBlockRecordsAddedUpdated" Text="Select a file for processing" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,284,0,0"/>
        <TextBlock Style="{StaticResource TextBlockStyle}" Name="TextBlockRecordsAddedNoAction" Text="Select a file for processing" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,309,0,0"/>
        <ProgressBar Name="ProgressFileProcess" Visibility="Hidden" HorizontalAlignment="Left" Height="27" Margin="70,109,0,0" VerticalAlignment="Top" Width="500" Background="Black" BorderBrush="White" BorderThickness="3"/>
    </Grid>
</Window>
