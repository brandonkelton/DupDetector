<Window x:Class="DupDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DupDetector"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="450" Width="650"
        WindowStyle="None">
    <Grid>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Height="20" Text="Select File" Style="{StaticResource TextBlockStyle}"/>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Records:" TextAlignment="Left" Style="{StaticResource TextBlockBoldStyle}"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="20" Text="Select File:" Style="{StaticResource TextBlockStyle}"/>
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="Added:" Style="{StaticResource TextBlockBoldStyle}"/>
        <TextBlock Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Text="Deleted:" Style="{StaticResource TextBlockBoldStyle}"/>
        <Button Content="Confirm" Grid.Column="1" HorizontalAlignment="Left" Margin="172,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Style="{StaticResource ButtonStyle}"/>
        <Button Content="Details" Grid.Column="1" HorizontalAlignment="Left" Margin="94,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"  Style="{StaticResource ButtonStyle}"/>
        <ComboBox HorizontalAlignment="Left" Margin="121,10,0,0" VerticalAlignment="Top" Width="386" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
